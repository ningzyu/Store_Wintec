<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_heightPercent="14%h"
    app:layout_widthPercent="100%"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_home_item"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="10%h"
        app:layout_marginPercent="2%h"
        android:transitionName="@string/transition_book_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_home_item"
            android:text="APP名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="APP大小"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <!--<com.nzy.zkyt.store_wintec.widget.DownloadProgressButton-->
        <!--android:id="@+id/dowBtn"-->
        <!--android:text="安装"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:progress_btn_ball_style="STYLE_BALL_PULSE"-->
        <!--app:progress_btn_border_width="2dp"/>-->
    <TextView
        android:text="安装"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_download_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.zhy.android.percent.support.PercentLinearLayout>