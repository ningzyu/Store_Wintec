<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nzy.zkyt.store_wintec.ui.activity.QueryActivity"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@drawable/bg_status_bar"/>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/btn_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/btn_return"/>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/my_search"
            android:orientation="horizontal"
            app:layout_heightPercent="60%h"
            app:layout_marginRightPercent="5%"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <ImageView
                android:src="@mipmap/search"
                app:layout_widthPercent="70%h"
                app:layout_heightPercent="70%h"
                app:layout_marginRightPercent="30%h"
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <EditText
                android:id="@+id/search_et_input"
                android:focusable="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="14sp"
                android:textColorHint="#000000"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="搜索"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
        
    </android.support.v7.widget.Toolbar>

    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="3dp">
    </LinearLayout>

    <!--推荐-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_recommend"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="搜索推荐"
            android:textColor="#000"
            />

        <!--刷新按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/image_refresh"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/icon_refresh"/>

            <TextView
                android:id="@+id/text_refresh"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="换一批"/>

        </LinearLayout>

    </LinearLayout>

    <!--推荐列表-->
    <ListView
        android:id="@+id/listview_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <!--分割线-->
    <include layout="@layout/line_divid"></include>

    <!--历史记录-->
    <ListView
        android:id="@+id/listview_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
