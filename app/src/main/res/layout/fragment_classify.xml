<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.nzy.zkyt.store_wintec.ui.fragment.ClassifyFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@drawable/bg_status_bar"
        />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:weightSum="1">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="10"
            android:layout_weight="0.94">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:text="应用分类"
                android:textColor="#000"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/image_classify_search"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="60%h"
                app:layout_widthPercent="60%h"
                android:src="@mipmap/search"/>

        </com.zhy.android.percent.support.PercentLinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="3dp">

    </LinearLayout>

    <ListView
        android:id="@+id/listview_classify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:paddingLeft="10dp"></ListView>

</LinearLayout>
